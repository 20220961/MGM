<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h2>식물 관리 페이지</h2>
<br>
<br>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>IP Address</th>
        <th>User ID</th>
        <th>제출</th>
    </tr>
    </thead>
    <tbody id="plantTableBody">
    <!-- API 데이터를 JavaScript로 가져와 추가할 예정 -->
    </tbody>
</table>

<script>
    // API에서 데이터 가져오기
    async function fetchPlantList() {
        try {
            const response = await fetch('/api/admin/plant/list', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error('Network response was not ok');
            }

            const plantList = await response.json();
            updateTable(plantList);
        } catch (error) {
            console.error('There was a problem with the fetch operation:', error);
        }
    }

    // 테이블에 데이터 추가하기
    function updateTable(plantList) {
        const tableBody = document.getElementById("plantTableBody");

        plantList.forEach(plant => {
            const row = document.createElement("tr");

            const idCell = document.createElement("td");
            const idInput = document.createElement("input");
            idInput.textContent = plant.id;
            idCell.appendChild(idInput);
            row.appendChild(idCell);

            const ipCell = document.createElement("td");
            ipCell.textContent = plant.ipaddress;

            const idInput = document.createElement("input");
            idInput.textContent = plant.ipaddress;
            idCell.appendChild(idInput);
            row.appendChild(ipCell);

            const userIdCell = document.createElement("td");
            const userIdInput = document.createElement("input");
            userIdInput.textContent = plant.user_id;
            userIdCell.appendChild(userIdInput);
            row.appendChild(userIdCell);

            // 제출 버튼이 들어갈 자리
            const blankCell = document.createElement("td");
            blankCell.textContent = "ddd";
            row.appendChild(blankCell);

            tableBody.appendChild(row);
        });
    }

    // 페이지 로드 시 API 호출
    window.onload = function() {
        fetchPlantList();
    }
</script>
</body>
</html>
